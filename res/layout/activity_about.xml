<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/about_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" >
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/about_qrcode"
        android:layout_below="@id/about_toolbar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/ewm_description"
        android:src="@drawable/qrcode" />
    
	<ImageView android:id="@+id/about_company_name"
	    android:layout_width="166dp"
	    android:layout_height="28dp"
	    android:layout_marginBottom="30dp"
	    android:src="@drawable/welcome_company_name"
	   	android:contentDescription="@string/icon_description"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true"/>

    <ImageView
	    android:id="@+id/welcome_logo"
	    android:layout_above="@id/about_company_name"
	    android:layout_width="150dp"
	    android:layout_height="143dp"
	    android:layout_marginBottom="30dp"
	    android:src="@drawable/welcome_logo"
	   	android:contentDescription="@string/icon_description"
	    android:layout_centerHorizontal="true"/> 

</RelativeLayout>