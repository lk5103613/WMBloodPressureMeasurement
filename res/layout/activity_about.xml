<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/about_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary" >
	        
        <RelativeLayout
            android:id="@+id/about_back"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" >

	        <ImageView 
	            android:layout_width="20dp"
		        android:layout_height="20dp"
		        android:layout_centerInParent="true"
		        android:contentDescription="@string/icon_description"
	            android:src="@drawable/action_back"/>
            
        </RelativeLayout>
        
        <TextView android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:textColor="@color/white"
           	android:textStyle="bold"
           	android:textSize="20sp"
            android:text="@string/title_activity_about"
            android:layout_centerInParent="true"/>
        
    </RelativeLayout>

    <ImageView
        android:id="@+id/about_qrcode"
        android:layout_below="@id/about_toolbar"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/ewm_description"
        android:src="@drawable/qrcode" />
    
	<ImageView android:id="@+id/about_company_name"
	    android:layout_width="166dp"
	    android:layout_height="28dp"
	    android:layout_marginBottom="20dp"
	    android:src="@drawable/about_company_info"
	   	android:contentDescription="@string/icon_description"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true"/>

    <ImageView
	    android:id="@+id/welcome_logo"
	    android:layout_above="@id/about_company_name"
	    android:layout_width="120dp"
	    android:layout_height="120dp"
	    android:layout_marginBottom="30dp"
	    android:src="@drawable/about_logo"
	   	android:contentDescription="@string/icon_description"
	    android:layout_centerHorizontal="true"/> 

</RelativeLayout>