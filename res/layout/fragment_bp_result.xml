<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.wm.activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    
    <com.wm.customview.ImageTextView 
        android:id="@+id/bp_pressure"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        app:textColor="@color/bp_pressure_value_color"
        app:textSize="45sp"
        android:src="@drawable/bp_result" />
        
    <LinearLayout android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            
        <RelativeLayout android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1">
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:text="@string/systolic_blood_pressure"/>
            
        </RelativeLayout>
        
        <RelativeLayout android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1">
            
             <com.wm.customview.ImageTextView  
	            android:id="@+id/lbl_ss"
                android:layout_width="107dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bp_text_bg"
                app:textSize="25sp" />
             
        </RelativeLayout>
    </LinearLayout>
        
    
    <LinearLayout android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            
        <RelativeLayout android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1">
                
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:text="@string/diastolic_blood_pressure"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1">
             <com.wm.customview.ImageTextView  
	            android:id="@+id/lbl_sz"
                android:layout_width="107dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bp_text_bg"
                app:textSize="25sp" />
        </RelativeLayout>
    </LinearLayout>
	
</LinearLayout>