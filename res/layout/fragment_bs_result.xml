<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:background="@color/white"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.wm.activity">
    
    <com.wm.customview.ImageTextView 
        android:id="@+id/bs_value"
        android:layout_width="180dp"
        android:layout_height="180dp" 
        android:layout_gravity="center_horizontal"
        app:textSize="50sp"
        app:textColor="@color/white"
        android:src="@drawable/bs_value_bg"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:text="@string/blood_sugar"
        android:textSize="26sp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center" />

</LinearLayout>
